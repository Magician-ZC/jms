{
  "manifest_version": 3,
  "name": "JMS Token Manager",
  "version": "1.1.0",
  "description": "JMS平台Token自动获取与管理 - 支持代理区和网点",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://jms.jtexpress.com.cn/*",
    "https://jmsgw.jtexpress.com.cn/*",
    "https://wd.jtexpress.com.cn/*",
    "https://wdgw.jtexpress.com.cn/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jms.jtexpress.com.cn/*",
        "https://wd.jtexpress.com.cn/*"
      ],
      "js": ["token_extractor.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["token_extractor.js", "ws_client.js"],
      "matches": [
        "https://jms.jtexpress.com.cn/*",
        "https://wd.jtexpress.com.cn/*"
      ]
    }
  ]
}
